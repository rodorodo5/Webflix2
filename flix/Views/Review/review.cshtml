                    </div>
                </div>
          
        </div>


           <script type="text/javascript">
    $(document).on('ready', function() {
      $(".regular").slick({

        infinite: true,
        slidesToShow: 1,
        slidesToScroll: 3
      });
      $(".center").slick({
          infinite: true,
          speed: 300,
          slidesToShow: 1,
          slidesToScroll: 1,
          autplay: true
      });
      $(".variable").slick({
        dots: true,
        infinite: true,
        variableWidth: true
      });
    });
    </script>
       
