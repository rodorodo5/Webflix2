@model flix.Models.MovieReviewsModel


@{
    ViewBag.Title = "Review";
}
<head>

    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Reviews Online</title>
    <link rel="stylesheet" type="text/css" href="~/Resources/Libraries/slick-1.6.0/slick/slick.css" />
    <link rel="stylesheet" type="text/css" href="~/Resources/Libraries/slick-1.6.0/slick/slick-theme.css" />
    <script src="https://code.jquery.com/jquery-2.2.4.js" integrity="sha256-iT6Q9iMJYuQiMWNd9lDyBUStIq/8PuOW33aOqmvFpqI=" crossorigin="anonymous"></script>
    <script src="~/Resources/Libraries/slick-1.6.0/slick/slick.min.js"></script>
    <script src="~/Resources/Libraries/slick-1.6.0/slick/slick.js"></script>
</head>
<body class="body-content" style="background-color:#2e313f;">


 


    <div class="body-content" style="padding-top: 20px;margin-left: 20px;margin-right: 20px;">

        <div class="panel panel-default" style="background-color:#8b3337;">
            <div class="panel-body">
                <h2 style="color:white;font-size:35px;text-align:center;" class="titles">Reviews</h2>
            </div>
        </div>



        <div class="row">

                <div class="col-md-9">

                    <div class="panel panel-default" style="background-color:white;">
                        <div class="panel-body">

                            <div class="container" style="margin-left:0px;">
                                <div class="row">
                              
                                    <div style="height: 850px;" class="col-md-5">
                                  
                                <div class="center slider" style="width:76%;">
                                        @foreach (var p in Model.Posters)
                                        {
                                        <a><img style="width: 265px; height: 400px; box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);"
                                            src="@Href("~/Content/" + @p.PathImage)" /></a>
                                        }
                                   </div>
                         
                                    </div>
                                    <div style="height:850px; background-color:#8b3337;border-radius:15px; box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);"
                                          class="col-md-4">
                                            <div class="body-content" style="margin-top:30px;">
                                                <h2 id="Title"></h2>
                                             
                                            @foreach (var actor in Model.Movie)
                                            {
                                                <p class="moviedes">Titulo:@actor.Title</p>
                                            }
                                                <p class="moviedes">Yo Soy Un Actor</p>
                                                @foreach (var actor in Model.MovieActors)
                                                {
                                                    <p class="moviedes">@actor.CharacterName</p>
                                                    <p class="moviedes">@actor.CharacterDescription</p>
                                                    <p class="moviedes">@actor.Protagonist</p>
                                                    <p class="moviedes">@actor.VoiceOnly</p>
                                                
                                                }
                                                @foreach (var actor in Model.Movie)
                                                {
                                                    <p class="moviedes">Soy Descripcion de Pelicula</p>
                                                    <p class="moviedes">@actor.Title</p>
                                                    <p class="moviedes">@actor.Year</p>
                                                    <p class="moviedes">@actor.Country.Name</p>
                                                    <p class="moviedes">@actor.Country.Abbv</p>
                                                    <p class="moviedes">@actor.Sinopsis</p>
                                                    <p class="moviedes">@actor.Length</p>


                                                }
                                            
                                                    
                                                
                                                <p class="moviedes">Son Generos de Pelicula</p>
                                                @foreach (var genre in Model.Genres)
                                                {
                                                    <p class="moviedes">@genre.Name</p>
                                                
                                                }
                                                <p class="moviedes">Son Trailers</p>
                                                @foreach (var trailer in Model.Trailers)
                                                {
                                                    <p class="moviedes">Titulo:@trailer.Url</p>

                                                }
    

                                            </div>
                                    </div>

                                </div>

                            </div>

                        </div>
                    </div>

                   


