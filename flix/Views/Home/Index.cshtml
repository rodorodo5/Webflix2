@model flix.Models.Categorias

@{
    ViewBag.Title = "Index";
    List<SelectListItem> list = new List<SelectListItem>();
    for (int i = 1; i < 10; i++)
    {
        SelectListItem one = new SelectListItem() { Text = "Categoria: ", Value = 1.ToString() };
        list.Add(one);
    }
}

<body style="background-color:rgb(7, 92, 111);">


    <div class="row" style="margin-top: 0px; background-color:#222; height:100px;">

        <div class="col-sm-4" style="margin-top:30px;">
            <div class="input-group">
                <span class="input-group-btn">
                    <button class="btn btn-default" type="button">Search!</button>
                </span>
                @Html.TextBox("SearchString", null, new { @class = "form-control" })
            </div>
        </div>

        <div class="col-sm-4" style="margin-top:30px;">

            @Html.DropDownListFor(c => c.categoria, list, "Selecciona", new { @class = "form-control" });
        </div>
